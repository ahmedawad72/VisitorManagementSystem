@model CreateVisitorFormViewModel
@{
    ViewData["Title"] = "إضافة زائر";
}

<h5>
    <i class="bi bi-person-fill-add"></i>
    إضافة زائر جديد
</h5>


<form asp-controller="Visitors">
    <div class="form-group">
        <label asp-for="Rank" class="control-label">الرتبة / الدرجة</label>
        <input type="text" asp-for="Rank" class="form-control"  placeholder="عميد / عقيد / مقدم / مساعد اول"/>
        <span asp-validation-for="Rank" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VisitorName" class="control-label">الأسم</label>
        <input type ="text" asp-for="VisitorName" class="form-control" placeholder="الأسم" />
        <span asp-validation-for="VisitorName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Job" class="control-label">الوظيفة</label>
        <input type="text" asp-for="Job" class="form-control" placeholder="مثال : رئيس فرع ....."/>
        <span asp-validation-for="Job" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Purpose" class="control-label">سبب المقابلة</label>
        <input type="text"  asp-for="Purpose" class="form-control" />
        <span asp-validation-for="Purpose" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VisitorMilitaryID" class="control-label">الرقم العسكري</label>
        <input type="text"  asp-for="VisitorMilitaryID" class="form-control" />
       
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary mt-4 ">إضافة الزائر</button>
    </div>
</form>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
